<!DOCTYPE html>
<html>
<head>
    <title>Doctor Dashboard</title>
    <!-- Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex justify-center items-center min-h-screen p-4">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg">
        <h1 class="text-3xl font-bold text-blue-600 mb-6 text-center">Doctor Dashboard</h1>
        
        <!-- Form -->
        <form action="/doctor-dashboard/add-encounter" method="POST" class="space-y-4">
            <!-- Patient Selection -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Select Patient:</label>
                <select name="patientId" required class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
                    {{#each patients}}
                    <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>

            <!-- Encounter Description -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">Encounter Description:</label>
                <textarea name="description" required class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" rows="4" placeholder="Enter description..."></textarea>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Add Encounter</button>
            </div>
        </form>
    </div>
</body>
</html>
