<!DOCTYPE html>
<html>
<head>
    <title>Health Portal</title>
    <!-- Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">
    {{#if error}}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6 max-w-4xl mx-auto">
        {{error}}
    </div>
    {{/if}}

    {{#if message}}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6 max-w-4xl mx-auto">
        {{message}}
    </div>
    {{/if}}

    <h1 class="text-4xl font-bold text-blue-600 mb-6 text-center">Welcome to the Health Portal</h1>
    
    <div class="flex gap-8 justify-center items-start">
        <!-- Login Form -->
        <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md">
            <h2 class="text-2xl font-semibold text-blue-500 mb-4">Login</h2>
            <form action="/login" method="POST" class="flex flex-col">
                <label class="mb-1 text-gray-700">Email:</label>
                <input type="email" name="email" required value="{{formData.email}}" class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                
                <label class="mb-1 text-gray-700">Password:</label>
                <input type="password" name="password" required class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                
                <div class="mb-4 text-right">
                    <a href="/forgot-password" class="text-sm text-blue-500 hover:text-blue-600">Forgot Password?</a>
                </div>

                <button type="submit" class="bg-blue-500 text-white p-2 rounded hover:bg-blue-600">Login</button>
            </form>
        </div>

        <!-- Register Form -->
        <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-md">
            <h2 class="text-2xl font-semibold text-green-500 mb-4">Register</h2>
            <form action="/register" method="POST" class="flex flex-col">
                <label class="mb-1 text-gray-700">Name:</label>
                <input type="text" name="name" required value="{{formData.name}}" class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-green-500">
                
                <label class="mb-1 text-gray-700">Email:</label>
                <input type="email" name="email" required value="{{formData.email}}" class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-green-500">
                
                <label class="mb-1 text-gray-700">Password:</label>
                <input type="password" name="password" required class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-green-500">
                
                <label class="mb-1 text-gray-700">Role:</label>
                <select name="role" required class="p-2 border rounded mb-4 focus:outline-none focus:ring-2 focus:ring-green-500">
                    <option value="doctor" {{#if (eq formData.role "doctor")}}selected{{/if}}>Doctor</option>
                    <option value="patient" {{#if (eq formData.role "patient")}}selected{{/if}}>Patient</option>
                </select>
                
                <button type="submit" class="bg-green-500 text-white p-2 rounded hover:bg-green-600">Register</button>
            </form>
        </div>
    </div>
</body>
</html>